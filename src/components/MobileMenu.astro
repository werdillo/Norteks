import Norteks from "../assets/img/logo.svg";
import { Image } from "astro:assets";
---

<nav class="mobile-menu">
	<div class="-wrapper">
		<a href="/textile" class="-link">Коллекции</a>
		<a href="/cleaning" class="-link">Как очистить ткань</a>
		<a href="/furniture" class="-link">Фурнитура</a>
		<a href="/blog" class="-link">Блог</a>
	</div>
</nav>
<style>
	.mobile-menu {
		z-index: 10;
		position: fixed;
		bottom: 0;
		background: #363636;
		width: 100vw;
		border: 0;
		min-height: 50px;
		@media (min-width: 700px) {
			display: none;
		}
		.-wrapper {
			min-height: 50px;
			padding: 0 20px;
			width: 1fr;
			font-weight: 600;
			color: #fff;
			display: flex;
			align-items: center;
			flex-wrap: wrap;
			gap: 10px;
			justify-content: space-between;
		}

		.-link {
			color: #fff;
			font-size: 12px;
			text-decoration: none;
			&:hover {
				color: aqua;
			}
		}
	}
</style>
