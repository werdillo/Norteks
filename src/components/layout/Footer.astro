---
import Norteks from "../../assets/img/logo.png";
import mail from "../../assets/img/icons/mail.svg";
import phone from "../../assets/img/icons/phone.svg";
import location from "../../assets/img/icons/location.svg";
import instagram from "../../assets/img/icons/instagram.svg";
import telegram from "../../assets/img/icons/telegram.svg";
import whatsapp from "../../assets/img/icons/whatsapp.svg";
import { Image } from "astro:assets";

const phoneNumbers = [
	{ number: "+7(495)2213316", display: "+7 (495) 221 - 33 - 16" },
	{ number: "+7(903)2213316", display: "+7 (903) 221 - 33 - 16" }
];

const emails = [
	{ address: "firma.nortex@gmail.com" },
	{ address: "info@tkani-nortex.ru" }
];

const socialLinks = [
	{ href: "https://www.instagram.com/tknortex/", icon: instagram, alt: "Instagram" },
	{ href: "https://t.me/tknortex", icon: telegram, alt: "Telegram" },
	{ href: "#", icon: whatsapp, alt: "WhatsApp" }
];
---

<footer class="footer">
	<div class="-logo">
		<img src="/logo.png" alt="" class="-img" />
		Стильный гардероб вашей мебели
	</div>
	<div class="-address">
		<Image class="-img" src={location} alt="" />
		<div class="-text s">Москва</div>
		<div class="-text m">Дмитровское шоссе 71Б</div>
		<div class="-text m">Бизнес-центр 7ONE, ООО "Нортекс"</div>
	</div>
	<div class="-phone">
		<Image src={phone} class="-img" alt="" />
		<div class="-contacts-container">
			{phoneNumbers.map((phone) => (
				<a class="-text l link" href={`tel:${phone.number}`}>
					{phone.display}
				</a>
			))}
		</div>
	</div>
	<div class="-email">
		<Image src={mail} class="-img" alt="" />
		<div class="-contacts-container">
			{emails.map((email) => (
				<a class="-text l link" href={`mailto:${email.address}`}>
					{email.address}
				</a>
			))}
		</div>
	</div>
	<div class="-social">
		<div class="-social-links">
			{socialLinks.map((social) => (
				social.href !== "#" ? (
					<a href={social.href} class="-social-link">
						<Image class="-social-icon" src={social.icon} alt={social.alt} />
					</a>
				) : (
					<div class="-social-link">
						<Image class="-social-icon" src={social.icon} alt={social.alt} />
					</div>
				)
			))}
		</div>
	</div>
</footer>

<style>
	.footer {
		background: #363636;
		min-height: 120px;
		width: 1fr;
		padding: 20px 100px;
		border: 0;
		color: #fff;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 20px;
		flex-wrap: wrap;
		@media (max-width: 700px) {
			padding: 20px 20px 80px 20px;
			flex-direction: column;
			align-items: flex-start;
		}

		.-text {
			color: #fff;
			font-size: 16px;
			&.s {
				font-size: 14px;
				@media (max-width: 768px) {
					font-size: 12px;
				}
			}
			&.m {
				font-size: 18px;
				@media (max-width: 768px) {
					font-size: 15px;
				}
			}
			&.l {
				font-size: 20px;
				@media (max-width: 768px) {
					font-size: 17px;
				}
			}
			&.link {
				&:hover {
					color: aquamarine;
				}
			}
		}
		.-logo {
			width: 160px;
			display: flex;
			flex-direction: column;
			gap: 12px;
			.-img {
				width: 100%;
				height: auto;
			}
		}
		.-email {
			display: flex;
			gap: 16px;
			align-items: center;
			.-img {
				height: 22px;
				width: auto;
			}
		}
		.-contacts-container {
			display: flex;
			flex-direction: column;
			gap: 10px;
		}
		.-phone {
			display: flex;
			gap: 16px;
			align-items: center;
			.-img {
				width: 18px;
				height: auto;
			}
		}
		.-address {
			position: relative;
			display: flex;
			gap: 6px;
			flex-direction: column;
			margin-left: 26px;
			@media (max-width: 768px) {
				margin-top: 12px;
			}
			.-img {
				position: absolute;
				top: -20px;
				left: -24px;
			}
		}

		.-social {
			display: flex;
			align-items: center;

			.-social-links {
				display: flex;
				gap: 15px;
				align-items: center;

				@media (max-width: 768px) {
					gap: 12px;
				}

				.-social-link {
					display: flex;
					align-items: center;
					justify-content: center;
					width: 40px;
					height: 40px;
					background: rgba(255, 255, 255, 0.1);
					border-radius: 50%;
					transition: all 0.3s;
					cursor: pointer;

					&:hover {
						background: #00d4ff;
						transform: translateY(-2px);
					}

					.-social-icon {
						width: 20px;
						height: 20px;

						@media (max-width: 768px) {
							width: 18px;
							height: 18px;
						}
					}
				}
			}
		}
	}
</style>
