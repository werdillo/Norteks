---
import textileIcon from "../../assets/img/icons/mobile/textile.svg";
import cleaningIcon from "../../assets/img/icons/mobile/cleaning.svg";
import furnitureIcon from "../../assets/img/icons/mobile/furniture.svg";
import blogIcon from "../../assets/img/icons/mobile/blog.svg";
import aboutIcon from "../../assets/img/icons/mobile/about.svg";
import { Image } from "astro:assets";

const currentPath = Astro.url.pathname;
---

<nav class="mobile-menu">
	<div class="-wrapper">
		<a
			href="/textile"
			class={currentPath === "/textile/" || currentPath.includes("/collection") || currentPath.includes("/product") ? "-link active" : "-link"}
		>
			<div class="-icon">
				<Image src={textileIcon} alt="" />
			</div>
			<span class="-text">Коллекции</span>
		</a>
		
		<a
			href="/cleaning"
			class={currentPath === "/cleaning/" ? "-link active" : "-link"}
		>
			<div class="-icon">
				<Image src={cleaningIcon} alt="" />
			</div>
			<span class="-text">Уход</span>
		</a>
		
		<a
			href="/furniture"
			class={currentPath === "/furniture/" ? "-link active" : "-link"}
		>
			<div class="-icon">
				<Image src={furnitureIcon} alt="" />
			</div>
			<span class="-text">Фурнитура</span>
		</a>
		
		<a
			href="/blog"
			class={currentPath === "/blog/" || currentPath.includes("/post") ? "-link active" : "-link"}
		>
			<div class="-icon">
				<Image src={blogIcon} alt="" />
			</div>
			<span class="-text">Блог</span>
		</a>
		
		<a
			href="/about-us"
			class={currentPath === "/about-us/" ? "-link active" : "-link active"}
		>
			<div class="-icon">
				<Image src={aboutIcon} alt="" />
			</div>
			<span class="-text">О нас</span>
		</a>
	</div>
</nav>
<style>
	.mobile-menu {
		z-index: 1000;
		position: fixed;
		bottom: 0;
		left: 0;
		right: 0;
		background: rgba(47, 47, 47, 0.95);
		backdrop-filter: blur(10px);
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		@media (min-width: 768px) {
			display: none;
		}
		
		.-wrapper {
			padding: 2px 8px;
			display: flex;
			align-items: center;
			justify-content: space-around;
			max-width: 100%;
		}

		.-link {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 2px;
			color: rgba(255, 255, 255, 0.6);
			text-decoration: none;
			padding: 4px 6px;
			border-radius: 12px;
			transition: all 0.3s ease;
			min-width: 50px;
			
			&:hover {
				background: rgba(255, 255, 255, 0.1);
				color: #00d4ff;
				
				.-icon img {
					opacity: 1;
				}
			}
			
			&.active {
				color: #ffffff;
				
				.-icon img {
					opacity: 1;
				}
			}
		}

		.-icon {
			display: flex;
			align-items: center;
			justify-content: center;
			width: 24px;
			height: 24px;
			
			img {
				width: 20px;
				height: 20px;
				opacity: 0.6;
				transition: all 0.3s ease;
			}
		}

		.-text {
			font-size: 10px;
			font-weight: 500;
			text-align: center;
			line-height: 1.2;
			
			@media (max-width: 380px) {
				font-size: 9px;
			}
		}

		.-link:hover .-icon img,
		.-link.active .-icon img {
			opacity: 1;
		}
	}
</style>
